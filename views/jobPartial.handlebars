<div class="row">
    <h3>Completed Jobs</h3>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Client Name</th>
                <th scope="col">Location</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each jobs}}
            {{#unless dataValues.active}}
            <tr>
                <th scope="row">{{dataValues.id}}</th>
                <td>
                    <p id="client_name">{{dataValues.client_name}}.</p>
                </td>
                <td id="location">{{dataValues.location}}.</td>
                <td>
                    <span class="badge badge-success">
                        Completed!
                    </span>
                </td>
            </tr>
            {{/unless}}
            {{/each}}
        </tbody>
    </table>
</div>