<div class="row">
    <div class="col-md-8">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Client Name</th>
                    <th scope="col">Location</th>
                </tr>
            </thead>
            <tbody id="tbody">
                {{#each jobs}}
                {{#if dataValues.active}}
                <tr>
                    <th scope="row">{{dataValues.id}}</th>
                    <td>
                        <p id="client_name">{{dataValues.client_name}}.</p>
                    </td>
                    <td id="location">{{dataValues.location}}.</td>
                </tr>
                {{/if}}
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <div class="container mt-5">
            {{#each jobs}}
            {{#if dataValues.active}}
            <div class="row">
                <button type="button" class="btn btn-primary mt-2 mb-4 job-done"
                    data-id="{{dataValues.id}}">Done!</button>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>
<!-- Move Completed jobs here -->
