<div class="col-md-5">
    <ul class="list-group">
        {{#each employees}}
        {{#unless dataValues.assigned}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            {{dataValues.id}}.
            {{dataValues.Name}}
            <span class="badge badge-success badge-pill">AVAILABLE</span>
        </li>
        {{/unless}}
        {{/each}}
    </ul>
</div>
